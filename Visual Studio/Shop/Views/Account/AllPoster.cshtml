@model IEnumerable<Shop.Models.ShopModel.Product>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.srcImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.heading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoriesname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.srcImg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.heading)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoriesname)
        </td>
        <td>
            @Ajax.ActionLink("Delete", "DeleteProduct", new { id = item.id }, new AjaxOptions { UpdateTargetId = "tab" })
        </td>
    </tr>
}

</table>
