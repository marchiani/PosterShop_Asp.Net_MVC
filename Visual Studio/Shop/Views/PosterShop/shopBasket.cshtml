@model  Tuple<ICollection<Shop.Models.ShopModel.Product>, ICollection<Shop.Models.ShopModel.shopBasket>>

@{
    ViewBag.Title = "shopBasket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .aPoster {
        margin-top: 50px;
        position: relative;
        text-decoration: none;
        display: block;
        border: 2px solid rgba(0, 0, 0, 0.7);
        color: rgba(0, 0, 0, 0.6);
        font-weight: bold;
    }
    .aPoster:hover {
        text-decoration: none;
        border: 2px solid rgba(0, 0, 0, 0.7);
        background-color: rgba(0, 0, 0, 0.7);
        color: azure;
    }
    .aDelete {
        position: relative;
        text-decoration: none;
        color: rgba(0, 0, 0, 0.7);
        font-weight: bold;
    }
    .aDelete:hover {
        text-decoration: underline;
        color: rgba(0, 0, 0, 0.9);
    }
</style>
@{
    List<int> listid =new List<int>();
    foreach (var i in Model.Item2)
    {
       listid.Add(i.Id); 
    }
    int IdCard = 0;
    if (listid.Count >= 1)
    {
        IdCard = listid[0];
    }
    int TotalPrice = 0;
}
<div class="container-fluid row">
    <table class="table offset-1 col-10">

        <tr>
            <th>Название постера</th>
            <th>Цена</th>
            <th>Размер</th>
            <th>Хотите удалить с корзины?</th>

        </tr>
        @foreach (var b in Model.Item1)
        {
            <tr class="">
                <td>@b.heading</td>
                <td>@b.Price</td>
                <td>@b.Size</td>
                <td><a class="aDelete" href="/PosterShop/Logic_Deleting_product/@IdCard">Delete</a></td>


                @{
                    IdCard++;
                    TotalPrice += b.Price;
                }
            </tr>

        }
    </table>
</div>
<div class="container-fluid row">
    @{
        if (Model.Item2.Count >= 1)
        {
            <div class=" offset-5  col-auto">
                <p  style="font-weight: bold; ">Сума заказа @TotalPrice грн</p>
                <a class="aPoster "  style="margin-top: 0; padding-left: 20px;" href="/PosterShop/Order">Оформить заказ</a>
            </div>
        }
    }
</div>
