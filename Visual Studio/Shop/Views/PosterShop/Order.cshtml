@model Shop.Models.ShopModel.Order

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="container-fluid justify-content-center  row offset-3 col-6">
        @using (Html.BeginForm())
        {
            <h2>Заполните формы и нажмите на кнопку</h2>
            @Html.AntiForgeryToken()

            <div class="form-group ">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10 d-block m-auto">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder="Ваше имя"} })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 d-block m-auto">
                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control", placeholder="Телефон" } })
                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 d-block m-auto">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder="Место доставки" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group d-block m-auto" style="margin-top: 20px; ">
                    <select class="form-control" id="exampleFormControlSelect1" name="TypeDelivery" style="margin-top: 20px; margin-bottom: 10px; display: block;">
                        <option selected value="Новая почта">Новая_почта</option>
                        <option value="Почта Украины">Почта_Украины</option>
                        <option value="Курьером в Киеве">Курьером_Киев</option>
                        <option value="Justin">Justin</option>
                        <option value="Intime">Intime</option>
                    </select>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Оформить заказ" class="btn btn-success d-block m-auto" />
                    </div>
                </div>
            </div>
        }
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
